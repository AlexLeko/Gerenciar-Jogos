@model GerenciarJogos.MVC.Models.TipoConsoleViewModel
@using GerenciarJogos.Common.Mensagens
@using GerenciarJogos.Common.Constantes

@{
    ViewBag.Title = ConstantesGerais.TITULO_CONSOLE;
}

<h2>@ViewBag.Title</h2>
<hr />

<form id="formConsole">

    @Html.HiddenFor(x => x.ConsoleId, new { @id = "hdnConsoleId" })

    <div class="col-md-12">
        <div class="row">
            <div class="form-group">
                <div class="col-xs-10">
                    <label class="control-label"><em class="obrigatorio"></em> Nome: </label>
                    @Html.TextBoxFor(x => x.Nome, new { @id = "txtNome", @class = "form-control required" })
                </div>
            </div>
        </div>
        <br /><br />
        <button type="button" id="btnNovo" class="btn btn-primary" onclick="bind.cadastrar();">Salvar</button>
        <br /><br />
        <div class="col-md-12">
            <table id="tblConsoles" class="table table-hover table-striped sortable"></table>
        </div>
    </div>
</form>

@section Scripts{
    <script type="text/javascript">
        var $mensagens = {
            MSG_CADASTRO: '@Html.Raw(Mensagem.MSG_CADASTRO_SUCESSO)',
            MSG_ALTERACAO: '@Html.Raw(Mensagem.MSG_ALTERACAO_SUCESSO)',

        };
    </script>

    <script src="~/Scripts/TipoConsole/tipoConsole.js"></script>
}

